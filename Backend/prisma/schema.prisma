generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student{
  id      int   @id @default(autoincremet())
  email   String  @unique
  username    String
  password  String
  school    String
  department  String
  regnumber   Int
  document   Document[]
}

model Document {
  id    @id @default(autoincremet())
  school    String
  Department    String
  level     Int
  module  String
  date    DateTime
  category    DocumentCategory
  content String
  studentId   Int
  Student     Student     @relation(fields:[studentId], references:[id])
}

enum DocumentCategory {
  quiz
  CAT
  EXAM
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id         Int        @id @default(autoincrement())
  email      String     @unique
  username   String
  password   String
  school     String
  department String
  regnumber  Int
  document   Document[]
}

model Document {
  id         Int              @id @default(autoincrement())
  school     String
  fieldId    String
  Department String
  level      Int
  module     String
  date       DateTime
  category   DocumentCategory
  url        String
  studentId  Int
  Student    Student          @relation(fields: [studentId], references: [id])
}

enum DocumentCategory {
  quiz
  CAT
  EXAM
}
model Report {
  id         Int      @id @default(autoincrement())
  reason     ReportReason
  status     ReportStatus @default(PENDING)
  studentId  Int
  documentId Int
  Student    Student  @relation(fields: [studentId], references: [id])
  Document   Document @relation(fields: [documentId], references: [id])
  createdAt  DateTime @default(now())
}

enum ReportReason {
  INAPPROPRIATE
  DUPLICATE
  COPYRIGHT
  OTHER
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
}
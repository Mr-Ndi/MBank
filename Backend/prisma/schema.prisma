generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  googleId  String?    @unique
  email     String     @unique
  firstName String
  lastName  String
  username  String
  password  String?
  role      Role       @default(GUEST)
  createdAt DateTime   @default(now())
  document  Document[]
  Report    Report[]
}

model Document {
  id          String           @id @default(uuid())
  school      String
  moduleCode  String
  department  String
  level       Int
  moduleName  String
  date        DateTime
  category    DocumentCategory
  url         String
  approved    Boolean          @default(false)
  uploadedAt  DateTime         @default(now())
  userId      String?
  User        User?            @relation(fields: [userId], references: [id])
  reportCount Int              @default(0)
  Report      Report[]
}

enum DocumentCategory {
  ASSIGNMENT
  CAT
  EXAM
  QUIZ
}

model Report {
  id         Int          @id @default(autoincrement())
  reason     ReportReason
  status     ReportStatus @default(PENDING)
  userId     String
  documentId String
  User       User         @relation(fields: [userId], references: [id])
  Document   Document     @relation(fields: [documentId], references: [id])
  createdAt  DateTime     @default(now())
}

enum ReportReason {
  INAPPROPRIATE
  DUPLICATE
  COPYRIGHT
  OTHER
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
}

enum Role {
  ADMIN
  GUEST
}
